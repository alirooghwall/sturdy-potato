# ISR Platform Environment Configuration

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=ISR Platform
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# =============================================================================
# API Settings
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000"]

# =============================================================================
# Security
# =============================================================================
SECRET_KEY=change-me-in-production-use-strong-random-key
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/isr_platform
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Kafka
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=isr-platform

# =============================================================================
# Data Ingestion System
# =============================================================================
INGESTION_ENABLED=true
INGESTION_AUTO_START=false
INGESTION_HEALTH_CHECK_INTERVAL=60

# Default retry settings
INGESTION_DEFAULT_MAX_RETRIES=3
INGESTION_DEFAULT_RETRY_DELAY=1
INGESTION_DEFAULT_RETRY_BACKOFF=2.0

# Circuit breaker settings
INGESTION_DEFAULT_CIRCUIT_BREAKER_THRESHOLD=5
INGESTION_DEFAULT_CIRCUIT_BREAKER_TIMEOUT=60

# Timeouts
INGESTION_DEFAULT_CONNECTION_TIMEOUT=10
INGESTION_DEFAULT_READ_TIMEOUT=30

# =============================================================================
# NewsAPI Connector (https://newsapi.org/)
# Free Tier: 100 requests/day
# =============================================================================
NEWSAPI_ENABLED=true
NEWSAPI_API_KEY=demo_key
NEWSAPI_MAX_REQUESTS_PER_MINUTE=5
NEWSAPI_MAX_REQUESTS_PER_HOUR=100
NEWSAPI_POLL_INTERVAL_SECONDS=900

# =============================================================================
# The Guardian Open Platform (https://open-platform.theguardian.com/)
# Free Tier: 5,000 requests/day, 12 requests/second
# =============================================================================
GUARDIAN_ENABLED=true
GUARDIAN_API_KEY=demo_key
GUARDIAN_MAX_REQUESTS_PER_MINUTE=60
GUARDIAN_MAX_REQUESTS_PER_HOUR=720
GUARDIAN_MAX_REQUESTS_PER_DAY=5000
GUARDIAN_POLL_INTERVAL_SECONDS=900

# =============================================================================
# New York Times API (https://developer.nytimes.com/)
# Free Tier: 500 requests/day, 5 requests/minute
# =============================================================================
NYTIMES_ENABLED=true
NYTIMES_API_KEY=demo_key
NYTIMES_MAX_REQUESTS_PER_MINUTE=5
NYTIMES_MAX_REQUESTS_PER_HOUR=60
NYTIMES_MAX_REQUESTS_PER_DAY=500
NYTIMES_POLL_INTERVAL_SECONDS=1800

# =============================================================================
# OpenWeatherMap API (https://openweathermap.org/api)
# Free Tier: 60 requests/minute, 1,000,000 requests/month
# Features: Current weather, 5-day forecast, air quality
# =============================================================================
WEATHER_ENABLED=true
WEATHER_API_KEY=demo_key
WEATHER_MAX_REQUESTS_PER_MINUTE=60
WEATHER_MAX_REQUESTS_PER_HOUR=1000
WEATHER_MAX_REQUESTS_PER_DAY=10000
WEATHER_POLL_INTERVAL_SECONDS=1800

# =============================================================================
# Social Media Connectors
# =============================================================================
SOCIAL_ENABLED=true
SOCIAL_USE_MOCK_DATA=true

# Twitter/X API v2 (https://developer.twitter.com/)
SOCIAL_TWITTER_API_KEY=
SOCIAL_TWITTER_API_SECRET=
SOCIAL_TWITTER_BEARER_TOKEN=

# Telegram Bot API (https://core.telegram.org/bots/api)
SOCIAL_TELEGRAM_BOT_TOKEN=
SOCIAL_TELEGRAM_CHANNELS=[]

SOCIAL_MAX_REQUESTS_PER_MINUTE=15
SOCIAL_MAX_REQUESTS_PER_HOUR=500
SOCIAL_POLL_INTERVAL_SECONDS=600

# =============================================================================
# Satellite Data Connectors (Enterprise subscriptions required)
# =============================================================================
SATELLITE_ENABLED=false

# Planet Labs (https://www.planet.com/)
SATELLITE_PLANET_API_KEY=

# Sentinel Hub (https://www.sentinel-hub.com/)
SATELLITE_SENTINEL_CLIENT_ID=
SATELLITE_SENTINEL_CLIENT_SECRET=

# Maxar (https://www.maxar.com/)
SATELLITE_MAXAR_API_KEY=

SATELLITE_MAX_REQUESTS_PER_MINUTE=10
SATELLITE_MAX_REQUESTS_PER_HOUR=100
SATELLITE_POLL_INTERVAL_SECONDS=3600

# =============================================================================
# Machine Learning Models
# =============================================================================
MODEL_CACHE_DIR=./models
ENABLE_GPU=false
USE_ML_PROCESSING=true

# Model Registry (customize if needed)
# Defaults are set in model_manager.py
# NER: dslim/bert-base-NER
# Sentiment: distilbert-base-uncased-finetuned-sst-2-english
# Zero-shot: facebook/bart-large-mnli
# Embeddings: sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# Notification Services
# =============================================================================
# Email Notifications
EMAIL_NOTIFICATIONS_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@isr-platform.local
ALERT_EMAIL_RECIPIENTS=admin@example.com

# Slack Notifications
SLACK_NOTIFICATIONS_ENABLED=false
SLACK_WEBHOOK_URL=

# SMS Notifications (Twilio)
SMS_NOTIFICATIONS_ENABLED=false
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
ALERT_SMS_RECIPIENTS=

# =============================================================================
# LLM Configuration
# =============================================================================
# OpenAI
OPENAI_API_KEY=
LLM_PROVIDER=openai
LLM_MODEL=gpt-4

# Anthropic
ANTHROPIC_API_KEY=

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
